<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlGuideLineView"
    android:paddingTop="@dimen/desc_padding"
    android:paddingLeft="@dimen/desc_padding"
    android:paddingRight="@dimen/desc_padding"
    android:background="@color/guideline_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/watch_out_big_cars"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/slide_title"
        android:textSize="@dimen/slide_title"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_guideline"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="10dp"
        app:civ_border_color="#404040"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/stay_away"
        android:textAlignment="center"
        android:layout_below="@id/image_guideline"
        android:textColor="@android:color/black"
        android:textSize="@dimen/slide_desc" />
</RelativeLayout>