<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/cross"
        android:id="@+id/ivCross"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rlOrders"
        android:layout_centerInParent="true"
        android:background="@drawable/dailog_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_size_height">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="@string/add_incident_location"
            android:layout_width="wrap_content"
            android:textSize="@dimen/slide_desc"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/title_color"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnAddLocation"
                style="@style/RoundedCornerMaterialButtonYellow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/white"
                android:textSize="@dimen/slide_desc"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/add_your_current_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/or"
                android:textColor="@color/title_color"
                android:textSize="@dimen/slide_desc" />

            <Button
                android:id="@+id/btnSelectLocationOnMap"
                style="@style/RoundedCornerMaterialButtonBlue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textColor="@color/white"
                android:textAllCaps="false"

                android:textSize="@dimen/slide_desc"
                android:text="@string/select_location_from_map" />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
